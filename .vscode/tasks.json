{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure (Unix Makefiles)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".",
        "-B", "build",
        "-G", "Unix Makefiles",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--config", "Debug",
        "--", "-j"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": ["configure (Unix Makefiles)"]
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--target", "clean"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
