{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "snatch (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/snatch",
      "args": [
        "--plugin-dir",
        "${workspaceFolder}/bin/plugins",
        "-s",
        "ttf",
        "-e",
        "png",
        "-c",
        "16",
        "-r",
        "6",
        "-a",
        "32",
        "-z",
        "126",
        "-x",
        "padding=3",
        "-o",
        "${workspaceFolder}/bin/font-grid.png",
        "${workspaceFolder}/bin/pixel-unicode-regular.ttf"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "build"
    }
  ]
}
