{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "snatch (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/snatch",
      "args": [
        "--plugin-dir",
        "${workspaceFolder}/bin/plugins",
        "--extractor",
        "image_passthrough_extractor",
        "--extractor-parameters",
        "input=${workspaceFolder}/test/data/tut.png",
        "--transformer",
        "dither_1bpp_transform",
        "--transformer-parameters",
        "threshold=128",
        "--exporter",
        "png",
        "--exporter-parameters",
        "output=${workspaceFolder}/bin/tut_dither_1bpp.png,columns=1,rows=1,padding=0,grid_thickness=0"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "build"
    }
  ]
}
